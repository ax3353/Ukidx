<idea-plugin>
    <id>org.zk.ip.Ukidx</id>
    <name>Ukidx</name>
    <version>0.1</version>
    <vendor email="247213579@qq.com">zk</vendor>

    <description> <![CDATA[
    Ukids plugin
              Features:
          <ul>
              <li>alt + / 生成方法参数requestParam, requestBody注解</li>
              <li>ctrl + k 查找下一个</li>
              <li>ctrl + shift + k 查找上一个</li>
          </ul>

      QQ: 247213579
    ]]></description>

    <change-notes><![CDATA[
          <ul>
              <li>alt + / 生成方法参数requestParam, requestBody注解</li>
              <li>ctrl + k 查找下一个</li>
              <li>ctrl + shift + k 查找上一个</li>
          </ul>
    ]]>
    </change-notes>

    <depends>com.intellij.modules.platform</depends>
    <depends>com.intellij.modules.lang</depends>
    <depends>com.intellij.modules.java</depends>
    <depends>com.intellij.java</depends>

    <extensions defaultExtensionNs="com.intellij">
        <!--项目服务-->
        <projectService id="org.zk.ip.paramanno.AnnotationService" serviceImplementation="org.zk.ip.paramanno.AnnotationService"/>
        <projectService id="org.zk.ip.paramanno.EditorService" serviceImplementation="org.zk.ip.paramanno.EditorService"/>

        <!--生成参数@RequestParam注解-->
        <intentionAction id="org.zk.ip.paramanno.GenerateRequestParamAnnotation">
            <className>org.zk.ip.paramanno.GenerateRequestParamAnnotation</className>
        </intentionAction>
        <!--生成参数@RequestBody注解-->
        <intentionAction id="org.zk.ip.paramanno.GenerateRequestBodyAnnotation">
            <className>org.zk.ip.paramanno.GenerateRequestBodyAnnotation</className>
        </intentionAction>
    </extensions>

    <actions>
        <group id="org.zk.ip.SeekKeywordGroup" text="Seek Keyword" popup="true">
            <add-to-group group-id="EditMenu" anchor="after" relative-to-action="FileEditor.OpenDataEditor"/>
            <action class="org.zk.ip.find.SeekPreviousKeyword" id="org.zk.ip.find.SeekPreviousKeyword"
                    text="Previous" description="Find previous">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl shift k"/>
            </action>
            <action class="org.zk.ip.find.SeekNextKeyword" id="org.zk.ip.find.SeekNextKeyword"
                    text="Next" description="Find next">
                <keyboard-shortcut keymap="$default" first-keystroke="ctrl k"/>
            </action>
        </group>
    </actions>
</idea-plugin>